# ==========================================================
# BACKEND CONFIGURATION
# ==========================================================
BACKEND_PORT_NUMBER=3000
FRONTEND_URL=http://localhost:80
NODE_ENV=development

# ==========================================================
# AUTHENTICATION (JWT)
# ==========================================================
JWT_SECRET=your_super_secret_key_at_least_32_chars
JWT_LIFETIME=7d

# ==========================================================
# DATABASE (MongoDB)
# ==========================================================
# Used by the MongoDB container for initialization
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=password123

# Connection string used by the Backend to talk to Mongo
# Format for Docker: mongodb://admin:password123@mongodb:27017/fasttalk?authSource=admin
MONGO_URI=mongodb://admin:password123@mongodb:27017/fasttalk?authSource=admin
REIDS_URI=redis://fasttalk-redis:6379

# ==========================================================
# MONGO EXPRESS (Database GUI)
# ==========================================================
ME_CONFIG_MONGODB_ADMINUSERNAME=admin
ME_CONFIG_MONGODB_ADMINPASSWORD=password123
ME_CONFIG_MONGODB_URL=mongodb://admin:password123@mongodb:27017/

# ==========================================================
# CLOUDINARY (Media Storage)
# ==========================================================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ==========================================================
# FRONTEND CONFIGURATION (Vite)
# ==========================================================
# This must be available during 'docker build' for the frontend
VITE_BACKEND_URL=http://localhost:3000